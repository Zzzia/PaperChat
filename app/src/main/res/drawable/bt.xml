<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#d9d8d8"/>
            <corners
                android:radius="5dip"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="5dip"/>
            <stroke
                android:width="1dip"
                android:color="#BDC7D8" />
        </shape>
    </item>
</selector>