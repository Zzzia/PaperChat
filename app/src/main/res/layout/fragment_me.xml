<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paperWhite"
    android:orientation="vertical"
    tools:context="com.zia.magiccard.View.Fragments.MeFragment"
    android:id="@+id/me_root">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/me_CardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/me_head"
                android:src="@mipmap/head_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/me_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/me_CardView"
            android:layout_toRightOf="@+id/me_CardView"
            android:text="zia"
            android:layout_marginLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/me_introduce"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/me_CardView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/lazy" />
    </RelativeLayout>

    <TextView
        android:id="@+id/me_markdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/markdown"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/me_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/help"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/me_login_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/login_out"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
