<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/paperWhite"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/item_message_right_picture_time"
        android:textColor="@color/textColorGray"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_message_right_picture_time">
    <android.support.v7.widget.CardView
        android:id="@+id/item_message_right_picture_CardView"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:elevation="0dp">
        <ImageView
            android:id="@+id/item_message_right_picture_head"
            android:src="@mipmap/head_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:text="zia"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:visibility="gone"
        android:id="@+id/item_message_right_picture_nickname"
        android:layout_toLeftOf="@+id/item_message_right_picture_CardView"
        android:layout_alignTop="@+id/item_message_right_picture_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_message_right_picture_image"
            android:layout_centerVertical="true"
            android:src="@mipmap/album"
            android:padding="2dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_picture"
            android:layout_toLeftOf="@+id/item_message_right_picture_CardView"
            android:layout_below="@+id/item_message_right_picture_nickname"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
</RelativeLayout>