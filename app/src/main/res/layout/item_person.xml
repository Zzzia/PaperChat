<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_message_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="0dp"
    android:orientation="horizontal"
    app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/item_person_imageCard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/item_person_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/head_default" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/item_person_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/item_person_imageCard"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/item_person_imageCard"
            android:maxEms="11"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_person_introduce"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/item_person_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_person_imageCard"
            android:maxLength="20"
            android:textColor="@color/textColorGray" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_person_sendCard"
        android:text="@string/delete"
        android:textColor="@color/paperWhite"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#ff3b2a" />
</LinearLayout>