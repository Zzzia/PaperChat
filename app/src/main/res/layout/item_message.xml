<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_message_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="0dp"
    app:cardCornerRadius="0dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/item_message_imageCard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="10dp"
            android:elevation="0dp">
            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/item_message_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/item_message_title"
            android:text="消息"
            android:maxEms="11"
            android:layout_toRightOf="@+id/item_message_imageCard"
            android:layout_alignTop="@+id/item_message_imageCard"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/item_message_content"
            android:text="今天是17号"
            android:maxEms="19"
            android:textColor="@color/textColorGray"
            android:layout_below="@+id/item_message_title"
            android:layout_toRightOf="@+id/item_message_imageCard"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/item_message_time"
            android:text="下午16:39"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@+id/item_message_title"
            android:layout_alignParentRight="true"
            android:textColor="@color/textColorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="1sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/item_message_delete"
            android:background="#ff3b2a"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>