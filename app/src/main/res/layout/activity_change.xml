<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/change_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zia.magiccard.View.ChangeActivity">
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/change_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="card"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/paperWhite">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/change_head"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"/>
            <Button
                android:id="@+id/change_boy"
                android:text="男生"
                android:layout_below="@+id/change_head"
                android:background="@drawable/bt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/change_girl"
                android:text="女生"
                android:layout_below="@+id/change_head"
                android:layout_alignParentRight="true"
                android:background="@drawable/bt"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_below="@+id/change_girl"
                android:layout_margin="30dp"
                android:padding="10dp"
                android:maxLength="30"
                android:id="@+id/change_introduce"
                android:gravity="top"
                android:textColor="@color/textColorGray"
                android:hint="个人简介"
                android:background="@drawable/bg_search"
                android:layout_width="match_parent"
                android:layout_height="110dp" />
            <TextView
                android:text="0/30"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_alignBottom="@+id/change_introduce"
                android:layout_alignRight="@+id/change_introduce"
                android:textColor="@color/textColorGray"
                android:id="@+id/change_edit_watcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="保存"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/change_introduce"
                android:layout_alignRight="@+id/change_introduce"
                android:background="@drawable/bt"
                android:id="@+id/change_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
