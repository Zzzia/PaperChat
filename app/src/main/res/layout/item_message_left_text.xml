<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/paperWhite"
    android:layout_margin="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/item_message_left_text_CardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="6dp"
        android:elevation="0dp">
        <ImageView
            android:id="@+id/item_message_left_text_head"
            android:src="@mipmap/head_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:text="消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息"
        android:id="@+id/item_message_left_text_tv"
        android:textSize="20sp"
        android:maxWidth="220dp"
        android:padding="15dp"
        android:background="@mipmap/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_message_left_text_CardView"
        android:layout_alignTop="@+id/item_message_left_text_CardView"/>
</RelativeLayout>