<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 状态栏颜色，会被statusBarColor效果覆盖-->
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <!-- 状态栏颜色，继承自colorPrimaryDark -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- actionBar颜色 -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!-- 背景颜色 与共享相关 -->
        <item name="android:windowBackground">@color/colorTranslate</item>
        <!-- 底部栏颜色 -->
        <item name="android:navigationBarColor">@color/black</item>
        <!-- ListView的分割线颜色，switch滑动区域色-->
        <item name="android:colorForeground">@color/colorPrimary</item>
        <!-- popMenu的背景色 -->
        <item name="android:colorBackground">@color/paperWhite</item>
        <!-- 控件默认颜色 ，效果会被colorControlActivated取代  -->
        <item name="android:colorAccent">@color/colorAccent</item>
        <!-- 控件默认时颜色  -->
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <!-- 控件按压时颜色，会影响水波纹效果，继承自colorAccent  -->
        <item name="android:colorControlHighlight">@color/colorPressed</item>
        <!-- 控件选中时颜色 editText焦点下划线颜色 -->
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <!-- Button的默认背景 -->
        <item name="android:colorButtonNormal">@color/paperWhite</item>
        <!-- Button，textView的文字颜色  -->
        <item name="android:textColor">@color/textColor</item>
        <!-- RadioButton checkbox等控件的文字 -->
        <item name="android:textColorPrimaryDisableOnly">@color/textColor</item>
        <!-- actionBar的标题文字颜色 -->
        <item name="android:textColorPrimary">@color/textColor</item>
    </style>

    <!-- pupupwindow的弹出和消失动画 -->
    <style name="popup_window_anim">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Matisse.PhotoPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="toolbar">@color/colorTranslate</item>
        <item name="album.title.color">@color/zhihu_album_title_text</item>
        <item name="album.count.color">@color/zhihu_album_count_text</item>
        <item name="album.selected">@android:color/white</item>
        <item name="album.placeholder">@color/zhihu_album_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.color">@color/zhihu_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.color">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.color">@color/zhihu_bottom_toolbar_apply</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.color">@color/zhihu_capture</item>
    </style>
</resources>
